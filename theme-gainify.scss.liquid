.carouselRightButton,.carouselLeftButton{
    display: none;
    width: 50px;
    height: 50px;
    position: absolute;
    top: 50%;
    z-index: 1;
    font-size: 30px;
    @media (min-width: 1200px) {
        display: inline-block;
    }
}

.carouselRightButton:hover,.carouselLeftButton:hover{
    cursor: pointer;
}

.carouselLeftButton{
    left: 0px;
    transform: translate(-50%,-50%);
    background-color: #D5D3D3;
    padding-left: 16px;
    @media (min-width: 1200px) {
        left: 80px;
    }
    @media (min-width: 1616px) {
        left: 0px;
    }
}

.carouselLeftButton i{
    color: #fff;
}

.carouselRightButton{
    right: 0px;
    transform: translate(50%,-50%);
    background-color: #AA8755;
    padding-left: 20px;
    @media (min-width: 1200px) {
        right: 80px;
    }
    @media (min-width: 1616px) {
        right: 0px;
    }
}

.carouselRightButton i{
    color: #fff;
}

.active-dot{
    background-color: #AA8755;
    border: 1px solid #AA8755;
}